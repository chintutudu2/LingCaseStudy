{
    "presets": ["module:metro-react-native-babel-preset"],
    "plugins": [
      "import-glob",
      [
        "module-resolver",
        {
          "root": ["./"],
          "extensions": [
            ".ios.ts",
            ".android.ts",
            ".ts",
            ".ios.tsx",
            ".android.tsx",
            ".tsx",
            ".jsx",
            ".js",
            ".json"
          ],
          "alias": {
            "@app": "./src/App",
            "@components": "./src/Components",
            "@screens": "./src/Screens",
          }
        }
      ]
    ]
  }